pipeline {
    agent none
    stages {
        stage('Clone repository') {
             steps {
                 checkout scm
             }
        }
        stage('Run Tests') {
            parallel {
                stage('Test On Windows') {
                    steps {
                        echo "run-tests.bat"
                    }
                }
                stage('Test On Linux') {
                    steps {
                        echo "run-tests.sh"
                    }
                }
            }
        }
    }
}